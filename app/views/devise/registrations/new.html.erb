<div class="container">
  <div>
    <h2>Vamos criar uma conta para você!</h2>
    <p>
      Olá, após criar a conta você poderá entrar no sistema e acompanhar o seu Pet.
      Vamos lá, é rápido
    </p>
  </div>

  <div class="mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p>
        Preencha todos os dados abaixo:
      </p>
      <%= render "devise/shared/error_messages", resource: resource %>


      <%= f.fields_for :responsavel do |responsavel| %>
        <div class="form-group">
          <%= responsavel.label "Nome completo" %>
          <%= responsavel.text_field :nome, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= responsavel.label "CPF" %>
          <%= responsavel.text_field :cpf, class: "form-control" %>
          <small class="form-text text-muted">
            Somente os números, ex: 11111111111
          </small>
        </div>

        <div class="form-group">
          <%= responsavel.label "Telefone para contato" %>
          <%= responsavel.text_field :telefone, class: "form-control" %>
          <small class="form-text text-muted">
            Somente os números, ex: 86999999999
          </small>
        </div>

        <div class="form-group">
          <%= responsavel.label "Data de nascimento" %>
          <%= responsavel.date_field :data_nascimento, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= responsavel.label "Sexo" %>
          <%= responsavel.select(:sexo, ["Masculino", "Feminino", "Não informar"], {}, { :class => "form-control" }) %>
        </div>

  <% end %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">
            (Pelo menos <%= @minimum_password_length %> caracteres)
          </small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Enviar</button>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>

</div>