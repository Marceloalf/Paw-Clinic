<div id="responsavel" class="retrieve">
  <div class="banner-content">
    <%= show_svg("pata.svg") %>
  </div>

  <main>
    <header>
      <div class="profile">
        <%= link_to "Sair", destroy_user_session_path, method: :delete %>
        <%= link_to "Voltar", responsavels_path %>
      </div>
      <img src="https://th.bing.com/th/id/R11cffbc044ed6560dc1b441d3ac9aeed?rik=VPbSjpc4MP4OrQ&riu=http%3a%2f%2fcdn.onlinewebfonts.com%2fsvg%2fdownload_169259.png&ehk=nVhocnKFtnrJBqcKSAfc9%2bpLn%2fJh6mkTyFnQV7A110U%3d&risl=&pid=ImgRaw" alt="profile img">
    </header>

    <div>
      <h1>
        Dados dos respons√°vel
      </h1>

      <div class="profile">
        <p>
          <strong>
            Nome:
          </strong>
          <%= @responsavel.nome %>
        </p>

        <p>
          <strong>
            CPF:
          </strong>
          <%= @responsavel.cpf %>
        </p>
        <p>
          <strong>
            Data de nascimento:
          </strong>
          <%= format_date(@responsavel.data_nascimento) %>
        </p>
        <p>
          <strong>
            Sexo:
          </strong>
          <%= @responsavel.sexo %>
        </p>
      </div>

      <div class="pets">
        <h3>
          Pets
          <%= link_to new_animal_path(@responsavel), :class => "add-link" do %>
            <i class="large material-icons">add_circle</i>
          <% end %>
        </h3>
        <% if @responsavel.animals.empty? %>
          <p>Sem pets :(</p>
        <% else %>
          <ul>
            <% @responsavel.animals.each do |animal| %>
              <li>
                <%= link_to animal.nome, animal %>

                <%= link_to edit_animal_path(animal), :class => "icons-link" do %>
                  <i class="large material-icons">edit</i>
                <% end %>

                <%= link_to animal, method: :delete, remote: true, class: "icons-link" do %>
                  <i class="large material-icons">delete</i>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>

  </main>
</div>