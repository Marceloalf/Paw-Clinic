<%= form_with(model: responsavel, :class => "col-lg-9 p-0") do |form| %>
  <% if responsavel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(responsavel.errors.count, "error") %> prohibited this responsavel from being saved:</h2>

      <ul>
        <% responsavel.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %>
    <%= form.text_field :telefone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Data de nascimento" %>
    <%= form.date_field :data_nascimento, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sexo %>
    <%= form.text_field :sexo, class: "form-control" %>
  </div>

  <button class="btn btn-success" type="submit">
    Salvar
  </button>
<% end %>
