<h1>
  Olá <%= current_user.responsavel.nome %>
</h1>

<h5>Estes são seus pets</h5>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Especie</th>
      <th>Raca</th>
      <th>Complicacoes</th>
      <th>Idade</th>
      <th>Sexo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.responsavel.animals do |animal| %>
      <tr>
        <td><%= animal.nome %></td>
        <td><%= animal.especie %></td>
        <td><%= animal.raca %></td>
        <td><%= animal.complicacoes %></td>
        <td><%= animal.idade %></td>
        <td><%= animal.sexo %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="users/sign_out/" data-method="DELETE">
  Sign out
</a>