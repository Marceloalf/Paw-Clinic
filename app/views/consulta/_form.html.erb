<%= form_with(model: consultum) do |form| %>
  <% if consultum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(consultum.errors.count, "error") %> prohibited this consultum from being saved:</h2>

      <ul>
        <% consultum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% if @consultum.veterinario %>
      <%= form.hidden_field 'veterinario_id' %>
    <% else %>
      <%= form.label :veterinario_id %> <br/>
      <%= form.collection_select(:veterinario_id, Veterinario.order('nome'), :id, :nome, {:prompt => true}) %>
    <% end %>
  </div>

  <div class="field">
    <% if @consultum.animal %>
      <%= form.hidden_field 'animal_id' %>
    <% else %>
      <%= form.label :animal_id %> <br/>
      <%= form.collection_select(:animal_id, Animal.order('nome'), :id, :nome, {:prompt => true}) %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.datetime_select :data %>
  </div>

  <div class="field">
    <%= form.label :sintomas %>
    <%= form.text_field :sintomas %>
  </div>

  <div class="field">
    <%= form.label :prescricao %>
    <%= form.text_field :prescricao %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
