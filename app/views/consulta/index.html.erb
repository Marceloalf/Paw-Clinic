<h1>Ativas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Data</th>
      <th>Sintomas</th>
      <th>Prescricao</th>
      <th>Created at</th>
      <th>Deleted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consulta.each do |consulta| %>
      <tr>
        <% render "as_list_without_link", consulta: consulta %>
        <td><%= link_to 'Show', consulta %></td>
        <td><%= link_to 'Edit', edit_consultum_path(consulta) %></td>
        <td><%= link_to 'Destroy', consulta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

