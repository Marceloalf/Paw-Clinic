<div id="consulta">
  <div class="banner-content">
    <%= show_svg("estetoscopio.svg") %>
  </div>

  <main>
    <header>
      <div class="profile">
        <%= link_to "Sair", destroy_user_session_path, method: :delete %>
        <%= link_to "Voltar", "/" %>
      </div>
      <img src="https://th.bing.com/th/id/R11cffbc044ed6560dc1b441d3ac9aeed?rik=VPbSjpc4MP4OrQ&riu=http%3a%2f%2fcdn.onlinewebfonts.com%2fsvg%2fdownload_169259.png&ehk=nVhocnKFtnrJBqcKSAfc9%2bpLn%2fJh6mkTyFnQV7A110U%3d&risl=&pid=ImgRaw" alt="profile img">
    </header>

    <div>
      <h1>
        Consulta
        <%= link_to new_consultum_path, :class => "add-link" do %>
          <i class="large material-icons">add_circle</i>
        <% end %>
      </h1>

      <h2>Ativas</h2>
      <ul class="list">
        <% @ativas.each do |consulta| %>
          <li class="list-item">
            <div class="list-button">
              <%= format_date(consulta.data) + " às " + format_time(consulta.data) %>

              <div class="item-actions">
                <%= link_to consulta do %>
                  <i class="large material-icons">remove_red_eye</i>
                <% end %>

                <%= link_to edit_consultum_path(consulta), :class => "icons-link" do %>
                  <i class="large material-icons">edit</i>
                <% end %>

                <%= link_to consulta, method: :delete, remote: true, class: "icons-link" do %>
                  <i class="large material-icons">cancel</i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>

      <h2>Finalizadas</h2>
      <ul class="list">
        <% @finalizados.each do |consulta| %>
          <li class="list-item">
            <div class="list-button">
              <%= format_date(consulta.data) + " às " + format_time(consulta.data) %>

              <div class="item-actions">
                <%= link_to consulta do %>
                  <i class="large material-icons">remove_red_eye</i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>

      <h2>Canceladas</h2>
      <ul class="list">
        <% @deletados.each do |consulta| %>
          <li class="list-item">
            <div class="list-button">
              <%= format_date(consulta.data) + " às " + format_time(consulta.data) %>

              <div class="item-actions">
                <%= link_to consulta do %>
                  <i class="large material-icons">remove_red_eye</i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>

    </div>

  </main>
</div>
